<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.devfestmn.bindingandroid">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PojoActivity"
            android:label="@string/pojo_binding"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".BaseObservableActivity"
            android:label="@string/baseobservable_binding"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".ObservableFieldActivity"
            android:label="@string/observefield_binding"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".ObservableCollectionActivity"
            android:label="@string/observecollection_binding"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".RecyclerViewActivity"
            android:label="@string/recyclerview_binding"
            android:parentActivityName=".MainActivity"/>
    </application>

</manifest>